<h3>Your cart</h3>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Product</th>
			<th>Price</th>
			<th>Q-ty</th>
		</tr>
	</thead>
	<tbody>
	<% total_price = 0 %>
	<% total_qty = 0 %>
	<% @items.each do |item| %>
	 	<tr>
	  		<td> <%= item[0].title %> </td>
	  		<td> <%= item[0].price %> </td>
	  		<td> <%= item[1] %> </td>
	 	</tr>
	 	<% total_price += item[0].price * item[1].to_i %>
	 	<% total_qty += item[1].to_i %>
	 <% end %>

	 	<tr>
	  		<td>  </td>
	  		<td> <i>Total: </i><%= total_price %> Uah</td>
	  		<td> <%= total_qty %> </td>
	 	</tr>

	</tbody>
</table>

<form action="/place_order" method="POST" role="form">

  <input name="order[orders_input]" type="hidden" value="<%=@orders_input%>"/>

  <div class="form-group">
    <label>Name</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Type your name here...">
  </div>

  <div class="form-group">
    <label>Phone</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Type your phone here...">
  </div>

  <div class="form-group">
    <label>Address</label>
    <textarea name="order[address]" type="text" class="form-control" placeholder="Delivery address..."></textarea>
  </div>

  <button type="submit" class="btn btn-success">Place this order!</button>

</form>